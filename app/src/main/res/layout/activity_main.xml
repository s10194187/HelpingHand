<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sosText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="35dp"
        android:elevation="5dp"
        android:textSize="49dp"
        android:textStyle="bold"
        android:text="SOS"
        app:layout_constraintBottom_toBottomOf="@+id/sosButton"
        app:layout_constraintEnd_toEndOf="@+id/sosButton"
        app:layout_constraintStart_toStartOf="@+id/sosButton"
        app:layout_constraintTop_toTopOf="@+id/sosButton" />
    <Button
        android:id="@+id/sosButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-180dp"
        app:backgroundTint="#FA6C6C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lostButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:text="Help, I am Lost!"
        app:backgroundTint="#FF2E2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sosButton"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/sosButton"
        app:layout_constraintTop_toBottomOf="@+id/sosButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/medAlarmButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="43dp"
        android:text="Appointments"
        app:backgroundTint="#00500B"
        app:layout_constraintBottom_toTopOf="@+id/lostButton"
        app:layout_constraintEnd_toStartOf="@+id/locationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sosButton" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="43dp"
        android:text="Button"
        app:backgroundTint="#00500B"
        app:layout_constraintBottom_toTopOf="@+id/lostButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/medAlarmButton"
        app:layout_constraintTop_toBottomOf="@+id/sosButton" />



</androidx.constraintlayout.widget.ConstraintLayout>